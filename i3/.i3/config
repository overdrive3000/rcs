exec --no-startup-id clipit &
exec --no-startup-id nm-applet &
exec --no-startup-id feh --bg-scale ~/Pictures/wallpaper.jpg
exec --no-startup-id ~/.scripts/touchscreen-toggle.sh
exec --no-startup-id ~/.scripts/touchpad.sh

